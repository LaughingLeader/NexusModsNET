<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>Hasan Darwish</Authors>
		<Company />
		<Description>A client for the NexusMods API to proccess requests and resposes as described in the API documentaion, it handles the server responses and deseriliazes the content to .NET objects</Description>
		<Copyright>Copyright (c) 2020 Hasan Darwish</Copyright>
		<RepositoryUrl>https://github.com/Proless/NexusModsNET</RepositoryUrl>
		<PackageProjectUrl>https://github.com/Proless/NexusModsNET</PackageProjectUrl>
		<PackageTags>nexusmods, api, mods</PackageTags>
		<PackageReleaseNotes>Initial release</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="3.1.5" />
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
	</ItemGroup>

</Project>
